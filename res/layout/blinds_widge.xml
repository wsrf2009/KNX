<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent" 
    android:layout_height="wrap_content" >

    <FrameLayout
        android:layout_width="fill_parent" 
        android:minWidth="@dimen/control_item_min_width" 
        android:layout_height="wrap_content" >

        <LinearLayout

            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/btnLeft"
                style="@style/Default.Button.Blinds.Down"
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1.0" />

            <Button
                android:id="@+id/btnRight"
                style="@style/Default.Button.Blinds.Up"
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1.0" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/txtBlindsText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                style="@style/Default.GrayText" 
                android:gravity="center" />
        </LinearLayout>

        <ImageView
            android:id="@+id/imgLeft"
            style="@attr/styleBlindsDown"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:layout_margin="15dip"
            android:contentDescription="@null"
            android:src="@drawable/default_blinds_symbol_light_down" />

        <ImageView
            android:id="@+id/imgRight"
            style="@attr/styleBlindsUp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:layout_margin="15dip"
            android:contentDescription="@null"
            android:src="@drawable/default_blinds_symbol_light_up" />

    </FrameLayout>

</merge>