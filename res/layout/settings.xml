<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/settings"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.sation.knxcontroller.activity.SettingsActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <com.sation.knxcontroller.widget.settingview.SettingButton
                android:id="@+id/SettingButton_KNXGateway"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp" />

            <com.sation.knxcontroller.widget.settingview.SettingButton
                android:id="@+id/SettingButton_PhysicalAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp" />

            <com.sation.knxcontroller.widget.settingview.SettingButton
                android:id="@+id/SettingButton_ScreenOff"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp" />

            <com.sation.knxcontroller.widget.settingview.SettingButton
                android:id="@+id/SettingButton_Language"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp" />

            <com.sation.knxcontroller.widget.settingview.SettingButton
                android:id="@+id/SettingButton_Reboot"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp" />

            <com.sation.knxcontroller.widget.settingview.SettingButton
                android:id="@+id/SettingButton_ChangePassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp" />

            <com.sation.knxcontroller.widget.settingview.SettingButton
                android:id="@+id/SettingButton_UpgradeSoftware"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp" />

            <com.sation.knxcontroller.widget.settingview.SettingButton
                android:id="@+id/SettingButton_UpgradeProject"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp" />

            <com.sation.knxcontroller.widget.settingview.SettingButton
                android:id="@+id/SettingButton_SystemStatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp" />

        </LinearLayout>
    </ScrollView>
</RelativeLayout>
