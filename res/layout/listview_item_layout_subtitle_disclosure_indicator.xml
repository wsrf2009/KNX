<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/listviewItemLayoutSubtitleDisclosureIndicator"
    android:descendantFocusability="blocksDescendants"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentTop="true"
    android:layout_alignParentStart="true"
    android:paddingBottom="3dp"
    android:paddingTop="3dp">

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="3dp"
        android:id="@+id/listviewItemLayoutSubtitleDisclosureIndicatorTitle"
        android:textSize="@dimen/font_size_large" />

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:id="@+id/listviewItemLayoutSubtitleDisclosureIndicatorImageView"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="15dp"
        android:src="@drawable/chevron" />

    <ImageButton
        android:src="@android:drawable/ic_media_pause"
        android:layout_marginEnd="15dp"
        android:id="@+id/listviewItemLayoutSubtitleDisclosureIndicatorImageButton"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@+id/listviewItemLayoutSubtitleDisclosureIndicatorImageView"
        android:focusable="false"
        android:clickable="true"
        android:layout_width="40dp"
        android:layout_height="40dp" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/listviewItemLayoutSubtitleDisclosureIndicatorSubtitle"
        android:layout_alignStart="@+id/listviewItemLayoutSubtitleDisclosureIndicatorTitle"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/listviewItemLayoutSubtitleDisclosureIndicatorTitle" />
</RelativeLayout>