<?xml version="1.0" encoding="utf-8"?>
<resources>
    <attr name="styleLable" format="reference" />
    <attr name="styleRoomListDivider" format="reference" />
    <attr name="StyleToggleButton" format="reference" />
    <attr name="styleGroupItem" format="reference" />
    <attr name="styleGridLayout" format="reference" />
    <attr name="styleDialogButton" format="reference" />
    <attr name="styleMySilder" format="reference" /> 
    <attr name="styleButton" format="reference" /> 
    <attr name="styleMediaButton" format="reference" /> 
    <attr name="styleSliderSwitch" format="reference" />
    <attr name="styleBlindsDown" format="reference" />
    <attr name="styleBlindsUp" format="reference" />  
	<attr name="textSize" format="dimension" /> 
	<attr name="textColor" format="color" />
    <attr name="thumb" format="reference" />   
    <attr name="thumbTextPadding" format="dimension" />  
    <attr name="switchTextAppearanceAttrib" format="reference" /> 
    <attr name="switchMinWidth" format="dimension" /> 
    <attr name="switchMinHeight" format="dimension" /> 
    <attr name="switchPadding" format="dimension" />
    <attr name="imgArrowDown" format="reference" />
    <attr name="imgArrowUp" format="reference" />
    <attr name="imgLightDown" format="reference" />
    <attr name="imgLightUp" format="reference" /> 
    <attr name="imgVolumeDown" format="reference" />
    <attr name="imgVolumeUp" format="reference" /> 

    <declare-styleable name="sliderSwitchTextAppearanceAttrib"> 
        <attr name="textColor" />
        <attr name="textSize" /> 
        <attr name="textStyle">
            <flag name="normal" value="0" />
            <flag name="bold" value="1" />
            <flag name="italic" value="2" />
        </attr> 
        <attr name="typeface" format="reference">
            <enum name="normal" value="0" />
            <enum name="sans" value="1" />
            <enum name="serif" value="2" />
            <enum name="monospace" value="3" />
        </attr> 
        <attr name="textColorHighlight" format="color" /> 
        <attr name="textColorHint" format="color" /> 
        <attr name="textColorLink" format="color" />
        <attr name="textAllCaps" format="boolean" />
    </declare-styleable> 

    <declare-styleable name="ProgressBar">
        <attr name="android:progressDrawable" />
        <attr name="android:minWidth" />
        <attr name="android:maxWidth" />
        <attr name="android:minHeight" />
        <attr name="android:maxHeight" />
        <attr name="android:max" />
        <attr name="android:progress" />
        <attr name="android:secondaryProgress" />
        <attr name="vertical" format="boolean" />
    </declare-styleable>

    <declare-styleable name="SeekBar">
        <attr name="android:thumb" />
        <attr name="android:thumbOffset" />
    </declare-styleable>
    <declare-styleable name="Theme">
        <attr name="android:disabledAlpha" />
    </declare-styleable>
    
     <declare-styleable name="IconButton">
        <attr name="iconPadding" format="dimension"/>
    </declare-styleable>

    <declare-styleable name="SettingView">
        <attr name="iOSStyle" format="boolean" />
    </declare-styleable>
    <declare-styleable name="SettingViewItem">
        <attr name="title" format="string" />
        <attr name="subTitle" format="string" />
        <attr name="titleColor" format="reference" />
        <attr name="subTitleColor" format="reference" />
        <attr name="titleSize" format="reference|dimension" />
        <attr name="subTitleSize" format="reference|dimension" />
        <attr name="drawable" format="reference" />
        <attr name="arrow" format="reference" />
        <attr name="check" format="reference" />
        <attr name="image" format="reference" />
        <attr name="clickable" format="boolean" />
        <attr name="checked" format="boolean" />
        <attr name="background" format="reference" />
    </declare-styleable>

    
</resources>