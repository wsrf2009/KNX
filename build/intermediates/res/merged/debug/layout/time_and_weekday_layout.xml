<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TimePicker
        android:id="@+id/timeAndWeekdayLayoutTimePickerTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignWithParentIfMissing="true"
        android:layout_centerHorizontal="true" />

    <LinearLayout
        android:id="@+id/periodicityLayoutLinearLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignWithParentIfMissing="true"
        android:layout_below="@id/timeAndWeekdayLayoutTimePickerTime" >

        <CheckBox
            android:id="@+id/timeAndWeekdayLayoutCheckBoxMonday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="50dp"
            android:text="@string/monday" />

        <CheckBox
            android:id="@+id/timeAndWeekdayLayoutCheckBoxTuesday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="50dp"
            android:text="@string/tuesday" />

        <CheckBox
            android:id="@+id/timeAndWeekdayLayoutCheckBoxWednesday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="50dp"
            android:text="@string/wednesday" />

        <CheckBox
            android:id="@+id/timeAndWeekdayLayoutCheckBoxThursday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/thursday" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/periodicityLayoutLinearLayout2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/periodicityLayoutLinearLayout1" >

        <CheckBox
            android:id="@+id/timeAndWeekdayLayoutCheckBoxFriday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="50dp"
            android:text="@string/friday" />

        <CheckBox
            android:id="@+id/timeAndWeekdayLayoutCheckBoxSaturday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="50dp"
            android:text="@string/saturday" />

        <CheckBox
            android:id="@+id/timeAndWeekdayLayoutCheckBoxSunday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sunday" />

    </LinearLayout>

</RelativeLayout>